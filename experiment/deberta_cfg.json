{
    "pipeline_setting": {
        "train": true,
        "test": false,
        "checkpoint_dir": "./saved/model",
        "load_pretrained": false,
        "resume": false,
        "state_dict": "",
        "name": "OneToOneTrainer",
        "loop": "train_loop",
        "dataset": "OneToOneDataset",
        "model_arch": "OneToOneModel",
        "model": "microsoft/deberta-v3-large",
        "pooling": "MeanPooling"
    },
    "common_settings": {
        "wandb": true,
        "optuna": false,
        "competition": "CommonLit",
        "seed": 42,
        "n_gpu": 1,
        "gpu_id": 0,
        "num_workers": 4
    },
    "data_settings": {
        "n_folds": 4,
        "max_len": 1024,
        "epochs": 20,
        "batch_size": 32,
        "val_batch_size": 32,
        "smart_batch": false
    },
    "gradient_settings": {
        "amp_scaler": false,
        "gradient_checkpoint": true,
        "clipping_grad": true,
        "n_gradient_accumulation_steps": 1,
        "max_grad_norm": 1000
    },
   "loss_options": {
        "loss_fn": "RMSELoss",
        "val_loss_fn": "RMSELoss",
        "reduction": "mean",
        "content_weight": 1,
        "wording_weight": 1
   },
    "metrics_options": {
        "metrics": "MCRMSELoss"
    },
    "optimizer_options": {
        "optimizer": "AdamW",
        "llrd": true,
        "layerwise_lr": 5e-5,
        "layerwise_lr_decay": 0.9,
        "layerwise_weight_decay": 1e-3,
        "layerwise_adam_epsilon": 1e-8,
        "layerwise_use_bertadam": false,
        "betas": [0.9, 0.999]
    },
    "scheduler_options": {
        "scheduler": "cosine_annealing",
        "batch_scheduler": true,
        "num_cycles": 2,
        "warmup_ratio": 0.05
    },
    "swa_options": {
        "swa": true,
        "swa_start": 2,
        "swa_lr": 5e-5,
        "anneal_epochs": 2,
        "anneal_strategy": "cos"
    },
    "model_utils": {
        "attention_probs_dropout_prob": 0.007,
        "hidden_dropout_prob": 0.1,
        "init_weight": "kaiming_normal",
        "stop_mode": "min",
        "freeze": false,
        "num_freeze": 1,
        "reinit": true,
        "num_reinit": 1,
        "awp": false,
        "nth_awp_start_epoch": 1,
        "awp_eps": 1e-2,
        "awp_lr": 1e-4
    }
}
